<Application x:Class="Ei_Dimension.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

    <ResourceDictionary>
      <SolidColorBrush x:Key="AppBackground" Color="#34558b"/>
      <SolidColorBrush x:Key="PressedButtonBackground" Color="#2a446f"/>
      <SolidColorBrush x:Key="UnpressedButtonBackground" Color="#416aae"/>
      <SolidColorBrush x:Key="AppTextColor" Color="white"/>
      <FontFamily x:Key="AppTextFont" >Mathcad UniMath</FontFamily>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styles/RibbonTileStyle.xaml"/>
        <ResourceDictionary Source="/Styles/HeatmapSelectorStyle.xaml"/>
        <ResourceDictionary Source="/Styles/RadioButtonThemeStyle.xaml"/>
        <ResourceDictionary Source="/Styles/ToggleButtonThemeStyle.xaml"/>
        <ResourceDictionary Source="/Styles/InputFieldStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
