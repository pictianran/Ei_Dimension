<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:Ei_Dimension.Views"
    xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" 
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
    xmlns:lang="clr-namespace:Ei_Dimension.Language;assembly=Language"
    x:Class="Ei_Dimension.MainWindow"
    Title="Ei_Dimension"
    Height="800"
    Width="1500"
    SnapsToDevicePixels="True"
    ResizeMode="NoResize"
    SizeToContent="Manual"
    Padding="0"
    WindowStyle="None"
    Background="{StaticResource AppBackground}"
    WindowStartupLocation="CenterScreen"
    ShowBackButton="False"
    ShowTitle="False"
    ShowStatusPanel="False"
    WindowKind="Normal"
    UseGlowColors="False"
    DataContext="{dxmvvm:ViewModelSource Type=ViewModels:MainViewModel}">
  
  <!--Numpad-->
  <dxmvvm:Interaction.Behaviors>
    <dxmvvm:WindowService WindowStartupLocation="Manual"
                              WindowShowMode="Default">
      <dxmvvm:WindowService.WindowStyle>
        <Style TargetType="Window">
          <Setter Property="Height" Value="274"/>
          <Setter Property="Width" Value="204"/>
          <Setter Property="AllowsTransparency" Value="True"/>
          <Setter Property="WindowStyle" Value="None"/>
          <Setter Property="Background" Value="Transparent"/>
          <Setter Property="Padding" Value="0"/>
          <Setter Property="ResizeMode" Value="NoResize"/>
          <Setter Property="Top" Value="400"/>
          <Setter Property="Left" Value="1300"/>
          <Setter Property="ShowInTaskbar" Value="False"/>
        </Style>
      </dxmvvm:WindowService.WindowStyle>
    </dxmvvm:WindowService>
  </dxmvvm:Interaction.Behaviors>
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.5*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="8*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="{lang:Loc Program_Name}"
               Foreground="{StaticResource AppTextColor}"
               FontSize="28"
               FontFamily="{StaticResource AppTextFont}"
               Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="5,0,0,0"
               TextWrapping="Wrap" />

    <!-- Company Logo -->
    <Image Grid.Row="0" Grid.Column="1"
           Source="Emission_Logo.png"
           Stretch="Fill"
           RenderOptions.BitmapScalingMode="HighQuality"/>
    <!--Tile Ribbon-->
    <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                Margin="30,0,0,0">
      <dxlc:Tile Header="{lang:Loc Ribbon_Dashboard}"
                 Command="{Binding NavigateDashboardCommand}"
                 Style="{StaticResource RibbonTileStyle}">
        <Image HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,6,4,0"
               Width="50"
               Height="50"
               Source="{dx:DXImage SvgImages/Chart/ChartType_Pie3D.svg}"/>
      </dxlc:Tile>
      <dxlc:Tile Header="{lang:Loc Ribbon_Acquire}"
                 Command="{Binding NavigateExperimentCommand}"
                 Style="{StaticResource RibbonTileStyle}">
        <Image HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,6,4,0"
               Width="50"
               Height="50"
               Source="{dx:DXImage SvgImages/Reports/GaugeStyleFullCircular.svg}"/>
      </dxlc:Tile>
      <dxlc:Tile Header="{lang:Loc Ribbon_Results}"
                 Command="{Binding NavigateResultsCommand}"
                 Style="{StaticResource RibbonTileStyle}">
        <Image HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,6,4,0"
               Width="50"
               Height="50"
               Source="{dx:DXImage 'SvgImages/DiagramIcons/ApplyChanges.svg'}"/>
      </dxlc:Tile>
      <dxlc:Tile Header="{lang:Loc Ribbon_Analysis}"
                 Command="{Binding NavigateDataAnalysisCommand}"
                 Style="{StaticResource RibbonTileStyle}">
        <Image HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,6,4,0"
               Width="50"
               Height="50"
               Source="{dx:DXImage 'SvgImages/Chart/ChartType_RadarArea.svg'}"/>
      </dxlc:Tile>
      <dxlc:Tile Header="{lang:Loc Ribbon_Maintenance}"
                 Command="{Binding NavigateMaintenanceCommand}"
                 Style="{StaticResource RibbonTileStyle}">
        <Image HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,6,4,0"
               Width="50"
               Height="50"
               Source="{dx:DXImage SvgImages/Setup/PageSetup.svg}"/>
      </dxlc:Tile>
      <dxlc:Tile Header="{lang:Loc Ribbon_Service}"
                 Command="{Binding NavigateSettingsCommand}"
                 Style="{StaticResource RibbonTileStyle}">
        <Image HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,6,4,0"
               Width="50"
               Height="50"
               Source="{dx:DXImage Images/Programming/Technology_32x32.png}"/>
      </dxlc:Tile>

    </StackPanel>

    <dxwui:NavigationFrame AnimationType="Fade"
                           NavigationCacheMode="Required"
                           Grid.Row="2" Grid.ColumnSpan="2">
      <dxmvvm:Interaction.Triggers>
        <dxmvvm:EventToCommand EventName="Loaded" Command="{Binding NavigateMaintenanceCommand}" />
      </dxmvvm:Interaction.Triggers>
      <dxmvvm:Interaction.Behaviors>
        <dxwuin:FrameNavigationService />
      </dxmvvm:Interaction.Behaviors>
    </dxwui:NavigationFrame>

    <dx:SimpleButton Grid.Row="2" Grid.Column ="1"
                  Height="50" Width="100"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="0,0,30,30"
                  Content="Numpad"
                  Command="{Binding NumpadToggleButonCommand}"/>
  </Grid>
</dx:ThemedWindow>
