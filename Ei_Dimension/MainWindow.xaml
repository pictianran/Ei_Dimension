<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:Ei_Dimension.Views"
    xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon" 
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
    xmlns:lang="clr-namespace:Ei_Dimension.Language;assembly=Language"
    xmlns:img="clr-namespace:Ei_Dimension.Styles"
    x:Class="Ei_Dimension.MainWindow"
    Title="Ei_Dimension"
    Height="800"
    Width="1500"
    SnapsToDevicePixels="True"
    ResizeMode="NoResize"
    SizeToContent="Manual"
    Padding="0"
    WindowStyle="None"
    Background="{StaticResource AppBackground}"
    WindowStartupLocation="CenterScreen"
    ShowBackButton="False"
    ShowTitle="False"
    ShowStatusPanel="False"
    WindowKind="Normal"
    UseGlowColors="False"
    DataContext="{dxmvvm:ViewModelSource Type=ViewModels:MainViewModel}">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="0.5*"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="8*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="{lang:Loc Program_Name}"
               Foreground="{StaticResource AppTextColor}"
               FontSize="28"
               FontFamily="{StaticResource AppTextFont}"
               Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="5,0,0,0"
               TextWrapping="Wrap" />

    <!-- Company Logo -->
    <Image Grid.Row="0" Grid.Column="1"
           Source="Emission_Logo.png"
           Stretch="Fill"
           RenderOptions.BitmapScalingMode="HighQuality"/>
    <!--Tile Ribbon-->
    <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                Margin="30,0,0,0">
      <RadioButton Content="{lang:Loc Ribbon_Dashboard}" Width="180"
                    img:EmbeddedImg.Image="/Icons/dashboard icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateDashboardCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Acquire}" Width="180"
                    img:EmbeddedImg.Image="/Icons/acquire sample icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateExperimentCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Results}" Width="180"
                    img:EmbeddedImg.Image="/Icons/results icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateResultsCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Analysis}" Width="180"
                    img:EmbeddedImg.Image="/Icons/data analysis icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateDataAnalysisCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Maintenance}" Width="180"
                    img:EmbeddedImg.Image="/Icons/maintenance icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateMaintenanceCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Ribbon_Service}" Width="180"
                    img:EmbeddedImg.Image="/Icons/service icon.png"
                    Style="{DynamicResource MainRibbonButtonStyle}"
                    Command="{Binding NavigateSettingsCommand}">
      </RadioButton>
    </StackPanel>

    <dxwui:NavigationFrame AnimationType="Fade"
                           NavigationCacheMode="Required"
                           Grid.Row="2" Grid.ColumnSpan="2">
      <dxmvvm:Interaction.Triggers>
        <dxmvvm:EventToCommand EventName="Loaded" Command="{Binding NavigateExperimentCommand}" />
      </dxmvvm:Interaction.Triggers>
      <dxmvvm:Interaction.Behaviors>
        <dxwuin:FrameNavigationService />
      </dxmvvm:Interaction.Behaviors>
    </dxwui:NavigationFrame>

    <!--Numpad-->
    <dx:SimpleButton Grid.Row="1" Grid.Column ="1"
                     Height="40" Width="50"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     Margin="155,0,0,5"
                     Glyph="{dx:DXImage 'SvgImages/Icon Builder/Electronics_Keyboard.svg'}"
                     GlyphHeight="40"
                     GlyphWidth="40"
                     Command="{Binding NumpadToggleButonCommand}"/>

    <Grid Grid.Row="2" Grid.Column="1"
          Visibility="{Binding NumpadVisible}"
          Margin="80,5,0,0">
      <Views:NumpadView />
    </Grid>
    
  </Grid>
</dx:ThemedWindow>
