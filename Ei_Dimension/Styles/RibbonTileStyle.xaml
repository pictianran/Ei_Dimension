<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol">

  <Style BasedOn="{StaticResource {x:Type dxlc:Tile}}"
         TargetType="{x:Type dxlc:Tile }"
         x:Key="RibbonTileStyle">
    <Style.Setters>
      <Setter Property="FontSize" Value="22"/>
      <Setter Property="FontFamily" Value="{DynamicResource AppTextFont}"/>
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="VerticalAlignment" Value="Stretch"/>
      <Setter Property="Background" Value="#295296"/>
      <Setter Property="Width" Value="180"/>
      <Setter Property="Margin" Value="0,0,3,0"/>
      <Setter Property="Foreground" Value="{DynamicResource AppTextColor}"/>
    </Style.Setters>
    
  </Style>
</ResourceDictionary>