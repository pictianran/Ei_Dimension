<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:ei_dimension="clr-namespace:Ei_Dimension"
             x:Class="Ei_Dimension.Views.ResultsView"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type={x:Type ViewModels:ResultsViewModel}}"
             d:DesignHeight="674" d:DesignWidth="1500">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <dxc:ChartControl Grid.Row="1" Grid.Column="0">
      <dxc:ChartControl.Diagram>
        <dxc:XYDiagram2D>
          <dxc:XYDiagram2D.AxisY>
            <dxc:AxisY2D>
              <dxc:AxisY2D.Label>
                <dxc:AxisLabel EndText="%" />
              </dxc:AxisY2D.Label>
            </dxc:AxisY2D>
          </dxc:XYDiagram2D.AxisY>
          <dxc:XYDiagram2D.Series>
            <dxc:BarSideBySideSeries2D DataSource="{Binding SampleX}" 
                                                   ArgumentDataMember="Wavelength" 
                                                   ValueDataMember="Intensity">
            </dxc:BarSideBySideSeries2D>
          </dxc:XYDiagram2D.Series>
        </dxc:XYDiagram2D>
      </dxc:ChartControl.Diagram>
    </dxc:ChartControl>
    
    <dx:SimpleButton Content="TEST"
                     Grid.Column="1" Grid.Row="1"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Command="{Binding AddItemCommand}"/>
  </Grid>
</UserControl>
