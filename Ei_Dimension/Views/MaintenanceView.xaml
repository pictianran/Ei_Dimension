<UserControl x:Class="Ei_Dimension.Views.MaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:dxwuin="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/navigation"
             xmlns:lang="clr-namespace:Ei_Dimension.Language;assembly=Language"
             xmlns:img="clr-namespace:Ei_Dimension.Styles"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type={x:Type ViewModels:MaintenanceViewModel}}"
             d:DesignHeight="944" d:DesignWidth="1920">
  <dxmvvm:Interaction.Triggers>
    <dxmvvm:EventToCommand EventName="Initialized" Command="{Binding InitChildrenCommand}"/>
  </dxmvvm:Interaction.Triggers>
  <Grid>

    <!--Tile Ribbon-->
    <StackPanel Margin="30,60,0,0"
                Width="240"
                HorizontalAlignment="Left">
      <RadioButton Content="{lang:Loc Maintenance_Calibration}"
                   Height="84"
                   IsChecked="True"
                   img:EmbeddedImg.Image="/Icons/calibration icon.png"
                   Style="{DynamicResource SubRibbonButtonStyle}"
                   Command="{Binding NavigateCalibrationCommand}">
      </RadioButton>
      <RadioButton Content="{lang:Loc Maintenance_Channels}"
                   Height="84"
                   img:EmbeddedImg.Image="/Icons/channels icon.png"
                   Style="{DynamicResource SubRibbonButtonStyle}"
                   Command="{Binding NavigateChannelsCommand}">
      </RadioButton>

    </StackPanel>

    <Border Grid.Column="0"
            Margin="30,460,0,0"
            HorizontalAlignment="Left"
            Width="240">
      <StackPanel>
        <ToggleButton Style="{StaticResource ToggleButtonThemeStyle}"
                      Height="70" Width="220"
                      Margin="0,0,0,10"
                      Content="{lang:Loc Maintenance_LEDs}"
                      IsChecked="{Binding LEDsToggleButtonState, Mode=OneWay}"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      IsEnabled="{Binding LEDsEnabled}"
                      Command="{Binding LEDsButtonClickCommand}"/>

        <StackPanel>
          <StackPanel.Resources>
            <Style x:Key="trackBarEditThumbStyle"
                   TargetType="Thumb">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate>
                    <Ellipse Width="48" Height="48"
                             Fill="{StaticResource ButtonBackground}"
                             Stroke="{StaticResource AppBackground}"
                             StrokeThickness="2"/>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
            <Style x:Key="nearTrackStyle"
                   TargetType="RepeatButton">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate>
                    <Border Background="{StaticResource ButtonBackground}"
                            Height="24"
                            VerticalAlignment="Center"
                            Margin="5,0,-5,0"
                            CornerRadius="4"/>
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
            <Style x:Key="farTrackStyle"
                   TargetType="RepeatButton">
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate>
                    <Border Background="{DynamicResource RibbonBackgroundActive}"
                            Height="24"
                            VerticalAlignment="Center"
                            Margin="-5,0,5,0"
                            CornerRadius="4" />
                  </ControlTemplate>
                </Setter.Value>
              </Setter>
            </Style>
          </StackPanel.Resources>
          <dxe:TrackBarEdit Margin="0,0,0,20" 
                            Minimum="0" Maximum="4095"
                            Width="220" EditValue="{Binding LEDSliderValue}"
                            CornerRadius="4" TickPlacement="None"
                            NearTrackStyle="{StaticResource nearTrackStyle}"
                            FarTrackStyle="{StaticResource farTrackStyle}"
                            ThumbStyle="{StaticResource trackBarEditThumbStyle}">
            <dxmvvm:Interaction.Behaviors>
              <dxmvvm:EventToCommand EventName="EditValueChanged"
                                     Command="{Binding LEDSliderValueChangedCommand}"/>
            </dxmvvm:Interaction.Behaviors>
          </dxe:TrackBarEdit>
        </StackPanel>

        <Button Content="{lang:Loc Maintenance_Sanitize}"
                Command="{Binding UVCSanitizeClickCommand}"
                Style="{StaticResource ButtonStyle}"
                Height="60" Width="220"
                Margin="0,20,0,10"/>
        <StackPanel Orientation="Horizontal">
          <TextBox HorizontalAlignment="Left"
                    Width="80"
                    Margin="10,0,10,3"
                    Style="{StaticResource InputFieldStyle}"
                    Text="{Binding SanitizeSecondsContent[0]}">
            <dxmvvm:Interaction.Behaviors>
              <dxmvvm:EventToCommand EventName="GotFocus" Command="{Binding FocusedBoxCommand}" CommandParameter="0"/>
              <dxmvvm:EventToCommand EventName="TextChanged" Command="{Binding TextChangedCommand}" PassEventArgsToCommand="True"/>
            </dxmvvm:Interaction.Behaviors>
          </TextBox>
          <TextBlock Text="{lang:Loc Seconds}"
                     FontFamily="{StaticResource AppTextFont}"
                     FontSize="30"
                     FontWeight="UltraBold"
                     Foreground="{StaticResource AppTextColor}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Margin="0,0,0,0"/>
        </StackPanel>
        <TextBlock Text="{lang:Loc Language}"
                 FontFamily="{StaticResource AppTextFont}"
                 FontSize="30"
                 FontWeight="UltraBold"
                 Foreground="{StaticResource AppTextColor}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,50,0,0"/>
        <dx:DropDownButton FontSize="30"
                           Margin="10,0,10,0"
                           dxb:BarManager.ShowGlyphsInPopupMenus="False"
                           FontFamily="{StaticResource AppTextFont}"
                           Foreground="{StaticResource AppTextColor}"
                           Content="{Binding SelectedLanguage}">
          <dxb:PopupMenu ItemLinksSource="{Binding LanguageItems}">
            <dxb:PopupMenu.ItemTemplate>
              <DataTemplate>
                <ContentControl>
                  <dxb:BarButtonItem Content="{Binding Content}"  
                                   ItemClick="{DXEvent 'Click()'}">
                    <dxb:BarButtonItem.ContentTemplate>
                      <DataTemplate>
                        <Grid Width="170">
                          <TextBlock Text="{Binding}" HorizontalAlignment="Center"
                                   FontFamily="{StaticResource AppTextFont}"
                                   Foreground="{StaticResource AppTextColor}"
                                   FontSize="25"/>
                        </Grid>
                      </DataTemplate>
                    </dxb:BarButtonItem.ContentTemplate>
                  </dxb:BarButtonItem>
                </ContentControl>
              </DataTemplate>
            </dxb:PopupMenu.ItemTemplate>
          </dxb:PopupMenu>
        </dx:DropDownButton>
      </StackPanel>
    </Border>

    <dxwui:NavigationFrame AnimationType="SlideHorizontal"
                           NavigationCacheMode="Required"
                           Margin="288,0,0,0">
      <dxmvvm:Interaction.Triggers>
        <dxmvvm:EventToCommand EventName="Loaded" Command="{Binding NavigateCalibrationCommand}" />
      </dxmvvm:Interaction.Triggers>
      <dxmvvm:Interaction.Behaviors>
        <dxwuin:FrameNavigationService />
      </dxmvvm:Interaction.Behaviors>
    </dxwui:NavigationFrame>
  </Grid>
</UserControl>
