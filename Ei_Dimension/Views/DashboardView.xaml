<UserControl x:Class="Ei_Dimension.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ViewModels="clr-namespace:Ei_Dimension.ViewModels"
             mc:Ignorable="d"
             DataContext="{dxmvvm:ViewModelSource Type=ViewModels:DashboardViewModel}"
             d:DesignHeight="674" d:DesignWidth="1500">
  <Grid>
    <Border BorderBrush="Purple"
              BorderThickness="200"/>
    <Image Source="{dx:DXImage 'SvgImages/XAF/State_Validation_Warning.svg'}"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"/>
    <TextBlock Text="View Under Construction"
               FontSize="60"
               FontWeight="UltraBold"
               Foreground="Wheat"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Margin="0,0,0,80"/>
  </Grid>
</UserControl>
